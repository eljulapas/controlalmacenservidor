<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!-- Imagen del Usuario -->
    <ImageView
            android:id="@+id/user_foto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" /> <!-- Imagen predeterminada -->

    <!-- Contenedor para el nombre y el estado del usuario -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

        <!-- Nombre del Usuario -->
        <TextView
                android:id="@+id/user_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del usuario"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <!-- Estado Habilitado del Usuario -->
        <TextView
                android:id="@+id/user_habilitado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habilitado"
                android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
